<odoo>
    <record id="view_crm_lead_form_inherit_other_name" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.other.name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="partner_second_name" string="Second Name"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_crm_lead_quick_create_second_name" model="ir.ui.view">
        <field name="name">crm.lead.quick.create.second.name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_second_name"/>
            </xpath>
        </field>
    </record>



    <record id="view_crm_lead_search_second_name" model="ir.ui.view">
        <field name="name">crm.lead.search.second.name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='company']" position="before">
                <field name="partner_second_name"/>
            </xpath>
        </field>
    </record>

</odoo>